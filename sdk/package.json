{
  "name": "@gargantua/sdk",
  "version": "0.1.0",
  "description": "TypeScript SDK for Gargantua Protocol - Zero-Knowledge Anonymous Payments on Solana",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rollup -c",
    "build:watch": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "docs": "typedoc src/index.ts"
  },
  "keywords": [
    "solana",
    "zero-knowledge",
    "privacy",
    "anonymous",
    "payments",
    "bulletproofs",
    "blockchain",
    "cryptocurrency"
  ],
  "author": "Freenetcoder",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/freenetcoder/gargantua.git",
    "directory": "sdk"
  },
  "bugs": {
    "url": "https://github.com/freenetcoder/gargantua/issues"
  },
  "homepage": "https://github.com/freenetcoder/gargantua#readme",
  "dependencies": {
    "@solana/web3.js": "^1.87.6",
    "@solana/spl-token": "^0.3.9",
    "borsh": "^0.7.0",
    "curve25519-js": "^0.0.4",
    "js-sha256": "^0.9.0",
    "buffer": "^6.0.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "rollup": "^4.5.0",
    "@rollup/plugin-typescript": "^11.1.5",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.0.1",
    "rollup-plugin-dts": "^6.1.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "typedoc": "^0.25.4"
  },
  "peerDependencies": {
    "@solana/web3.js": "^1.87.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}